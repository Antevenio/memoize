<phpunit colors="true" convertErrorsToExceptions="true">
    <testsuite name="Application Test Suite">
        <directory>./test/</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
</phpunit>
